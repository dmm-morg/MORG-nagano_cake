<div class="container">
  <div class="row">
    <div col-sm-12>
      <h5>注文情報入力</h5>
      <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
      <h5><strong>支払い方法</strong></h5>
      <div>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br/>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
      </div>

      <div>
        <h5><strong>お届け先</strong></h5>

        <div class="field">
          <%= f.radio_button :address_number, 1 %>
          <%= f.label :address_number_1, "ご自身の住所" %>
          <%= @customer.address_display_code %>
        </div>

        <div class="field">
          <%= f.radio_button :address_number, 2 %>
          <%= f.label :address_number_2, "登録済み住所から選択" %><br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
        </div>

        <div class="field">
          <%= f.radio_button :address_number, 3 %>
          <%= f.label :address_number_3, "新しいお届け先" %><br>

          <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :post_code %><br>

          <%= f.label :address, "住所" %>
          <%= f.text_field :address %><br>

          <%= f.label :name, "宛名" %>
          <%= f.text_field :name %>

        </div>

        <div class="actions">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>