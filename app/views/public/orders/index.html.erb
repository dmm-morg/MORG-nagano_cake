
<div class="container">
  <h2 class="mt-5">注文履歴一覧</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th colspan="6">注文詳細</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.items.each do |item| %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= order.order_status_i18n %></td>
          <td colspan="6">
            <%= link_to "表示する", orders_path(order), class: "btn btn-success" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
