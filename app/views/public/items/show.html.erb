<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <%= image_tag @item.image, size: "350x300" %>
    </div>
    <div class="col-5 offset-2">
      <table class="table">
        <tbody>
          <tr>
            <td><h5><%= @item.name %></h5></td>
          </tr>
          <tr>
            <td><h5><%= @item.introduction %></h5></td>
          </tr>
          <tr>
            <td>
              <h5>
                <i class="fas fa-yen-sign"></i>
                <%= @item.tax_included_price.to_s(:delimited) %>
                <span class="small">(税込)</span>
              </h5>
            </td>
          </tr>
          <tr>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>