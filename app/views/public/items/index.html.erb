<div class="container">
  <div class="row align-items-center">
    <h3>商品一覧</h3>
    <span>(全<%= @items.count %>件)</span>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3">
        <%= link_to(item) do %>
          <div class="card">
            <div class="card-img-top">
              <%= image_tag item.image, class: "index-img" %>
            </div>
            <div class="card-body">
              <h4 class="card-title"><%= item.name %></h4>
              <p class="card-text">
                <i class="fas fa-yen-sign"></i>
                <%= item.tax_excluded_price.to_s(:delimited) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

