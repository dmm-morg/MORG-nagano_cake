<div class="px-5 mx-5">
  <div class="mx-3"><h3 class="mb-5">注文履歴一覧</h3></div>
  <div class="row mx-5 px-5">

<table class="table border-bottom">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id), method: :get %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_details.sum(:count) %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @orders %>

  </div>
</div>
