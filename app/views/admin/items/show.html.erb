<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <table>
      <tbody>
        <tr>
          <td><h6>商品名</h6></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><h6>商品説明</h6></td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td><h6>ジャンル</h6></td>
          <td><%= @item.genre_id %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td>
            <%= @item.tax_excluded_price %>
            <%= @item.tax_included_price %>
          </td>
        </tr>
        <tr>
          <label>販売ステータス</label>
          <td><%= @item.sales_status %></td>
        </tr>
        <tr>
          <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>